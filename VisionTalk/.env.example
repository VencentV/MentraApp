# Server port - The port on which the application will run (default: 3000)
PORT=3000

# App package name - Your VisionTalk application's unique identifier from MentraOS Developer Console
PACKAGE_NAME=com.visiontalk.assistant

# MentraOS API key - Your developer API key from the MentraOS Developer Console
MENTRAOS_API_KEY=your_mentraos_api_key_here

# OpenAI API key - For GPT-4V vision analysis and reasoning
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API key - For natural voice synthesis  
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Public URL for ngrok or production deployment
PUBLIC_URL=https://your-ngrok-url.ngrok.app

# Optional feature flags / tuning (add as needed)
# Set to 'true' to only capture photos (skip AI + TTS pipeline)
CAPTURE_ONLY=false
# Logging level (silent|error|warn|info|debug)
VT_LOG_LEVEL=info
# HTTP request logging style (none|basic|sampled)
VT_HTTP_LOG=sampled
# Sample rate for polling route logs when VT_HTTP_LOG=sampled (0.0-1.0)
VT_HTTP_SAMPLE_RATE=0.033
# Play startup chime after welcome TTS (true|false)
STARTUP_CHIME=true
# Suppress duplicate TTS playback within this many ms if identical text+voice
AUDIO_DUPLICATE_SUPPRESS_MS=1200