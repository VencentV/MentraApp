<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VisionTalk - Photo Viewer</title>
  <style>
    body {
      margin: 0;
      padding: 20px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      font-family: 'Arial', sans-serif;
      color: white;
    }

    .container {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 30px;
      max-width: 90vw;
      max-height: 90vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
      border: 1px solid rgba(255, 255, 255, 0.18);
    }

    .header {
      text-align: center;
      margin-bottom: 20px;
    }

    .header h1 {
      margin: 0;
      font-size: 2.5em;
      font-weight: 300;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .header p {
      margin: 10px 0 0 0;
      opacity: 0.8;
      font-size: 1.1em;
    }

    .photo-container {
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 400px;
    }

    .photo {
      max-width: 100%;
      max-height: 60vh;
      object-fit: contain;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.3);
      transition: transform 0.3s ease;
    }

    .photo:hover {
      transform: scale(1.02);
    }

    .no-photo, .loading {
      text-align: center;
      font-size: 1.2em;
      opacity: 0.8;
      padding: 40px;
    }

    .loading {
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0% { opacity: 0.8; }
      50% { opacity: 0.4; }
      100% { opacity: 0.8; }
    }

    .instructions {
      margin-top: 20px;
      text-align: center;
      opacity: 0.7;
      font-size: 0.9em;
      line-height: 1.4;
    }

    .status {
      position: absolute;
      top: 20px;
      right: 20px;
      background: rgba(255, 255, 255, 0.2);
      padding: 10px 15px;
      border-radius: 20px;
      font-size: 0.8em;
    }

    .panel {
      margin-top: 20px;
      width: 100%;
      background: rgba(255, 255, 255, 0.08);
      border: 1px solid rgba(255, 255, 255, 0.15);
      border-radius: 12px;
      padding: 12px;
    }
    .panel h3 {
      margin: 0 0 8px 0;
      font-weight: 500;
    }
    .timeline {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 6px 12px;
      font-size: 12px;
      max-height: 180px;
      overflow: auto;
    }
    .badge {
      display: inline-block;
      padding: 2px 8px;
      border-radius: 999px;
      background: rgba(255,255,255,0.15);
      font-size: 11px;
    }
  </style>
</head>
<body>
  <div class="status" id="status">Checking connection...</div>
  
  <div class="container">
    <div class="header">
      <h1>üîç VisionTalk</h1>
      <p>AI-powered visual reasoning assistant</p>
    </div>
    
    <div class="photo-container">
      <div id="content" class="loading">Waiting for photos from your Mentra glasses...</div>
    </div>
    
    <div class="instructions">
      <strong>How to use:</strong><br>
      Put on your Mentra glasses, look at anything interesting,<br>
      and press the button to capture and analyze what you see.
    </div>

    <div class="panel">
      <h3>Event timeline</h3>
      <div id="timeline" class="timeline">
        <div>‚Äî</div><div>Waiting for events‚Ä¶</div>
      </div>
    </div>

    <div class="panel">
      <h3>Latest photo metadata</h3>
      <div id="meta" style="font-size:12px;opacity:0.9">No photo yet</div>
    </div>
  </div>

  <script>
    let currentRequestId = null;
    let connectionStatus = 'checking';
  let carouselLoaded = false;

    /**
     * Update connection status indicator
     */
    function updateStatus(status, message) {
      const statusEl = document.getElementById('status');
      connectionStatus = status;
      
      switch(status) {
        case 'connected':
          statusEl.textContent = 'üü¢ Connected';
          statusEl.style.background = 'rgba(34, 197, 94, 0.3)';
          break;
        case 'disconnected':
          statusEl.textContent = 'üî¥ Disconnected';
          statusEl.style.background = 'rgba(239, 68, 68, 0.3)';
          break;
        case 'checking':
        default:
          statusEl.textContent = 'üü° Checking...';
          statusEl.style.background = 'rgba(255, 255, 255, 0.2)';
      }
    }

    /**
     * Check for new photos and update display
     */
    async function checkForNewPhoto() {
      try {
        const response = await fetch('/api/latest-photo');

        if (response.status === 404) {
          // No photo available yet
          updateStatus('connected');
          if (document.getElementById('content').classList.contains('loading')) {
            document.getElementById('content').innerHTML =
              '<div class="no-photo">No photos captured yet.<br><br>Use your Mentra glasses to take a photo of anything you want to understand!</div>';
          }
          return;
        }

        if (!response.ok) {
          throw new Error(`HTTP ${response.status}: ${response.statusText}`);
        }

        updateStatus('connected');
        const photoInfo = await response.json();

        // Check if this is a new photo
        if (photoInfo.requestId !== currentRequestId) {
          currentRequestId = photoInfo.requestId;

          // Update the display with new photo
          document.getElementById('content').innerHTML =
            '<img class="photo" src="/api/photo/' + photoInfo.requestId + '" alt="Latest captured image" />';
          // Refresh carousel when new photo arrives
          loadCarousel();
          loadPhotoMeta(photoInfo.requestId);
        }
      } catch (error) {
        console.error('Error checking for new photo:', error);
        updateStatus('disconnected');
        document.getElementById('content').innerHTML =
          '<div class="no-photo">Connection error: ' + error.message + '<br><br>Please check that the VisionTalk server is running.</div>';
      }
    }

    async function loadCarousel() {
      try {
        const resp = await fetch('/api/photos');
        if (!resp.ok) return;
        const photos = await resp.json();
        const existing = document.getElementById('carousel');
        if (!existing) {
          const c = document.createElement('div');
          c.id = 'carousel';
          c.style.marginTop = '20px';
          c.style.display = 'flex';
          c.style.gap = '8px';
          c.style.flexWrap = 'wrap';
          document.querySelector('.container').appendChild(c);
        }
        const el = document.getElementById('carousel');
        el.innerHTML = photos.map(p => `<div style="flex:0 0 90px;display:flex;flex-direction:column;align-items:center;font-size:10px;">` +
          `<img style=\"width:90px;height:60px;object-fit:cover;border-radius:6px;box-shadow:0 0 4px rgba(0,0,0,0.4);\" src='/api/photo/${p.requestId}' alt='${p.requestId}' />` +
          `<span style='margin-top:4px;opacity:0.7;'>${new Date(p.timestamp).toLocaleTimeString()}</span>` +
        `</div>`).join('');
        carouselLoaded = true;
      } catch {}
    }

    // Initial carousel load (after slight delay to avoid race on first boot)
    setTimeout(() => loadCarousel(), 1200);

    async function loadPhotoMeta(id) {
      try {
        const resp = await fetch('/api/photo-info/' + id);
        if (!resp.ok) return;
        const p = await resp.json();
        const meta = document.getElementById('meta');
        meta.innerHTML = `
          <div><strong>requestId:</strong> ${p.requestId}</div>
          <div><strong>timestamp:</strong> ${new Date(p.timestamp).toLocaleString()}</div>
          <div><strong>size:</strong> ${p.size.toLocaleString()} bytes</div>
          <div><strong>mime:</strong> ${p.mimeType}</div>
          <div><strong>sha256:</strong> <code style="word-break:break-all">${p.sha256}</code></div>
        `;
      } catch {}
    }

    async function loadEvents() {
      try {
        const resp = await fetch('/api/events');
        if (!resp.ok) return;
        const data = await resp.json();
        const events = (data.events || []).slice(-20).reverse(); // newest first
        const t = document.getElementById('timeline');
        if (!events.length) {
          t.innerHTML = '<div>‚Äî</div><div>No events yet</div>';
          return;
        }
        t.innerHTML = events.map(ev => {
          const time = new Date(ev.ts).toLocaleTimeString();
          const excerpt = ev.detail && ev.detail.excerpt ? ' ‚Äî ' + ev.detail.excerpt : '';
          return `<div>${time}</div><div><span class="badge">${ev.stage}</span>${excerpt}</div>`;
        }).join('');
      } catch {}
    }

    // Poll events at a relaxed cadence
    loadEvents();
    setInterval(loadEvents, 3000);

    // Adaptive polling: fast for first 10s after load, slower when idle, faster briefly after a new photo
    let pollIntervalMs = 1500; // start a bit slower than 1s to reduce server spam
    let lastPhotoTs = 0;
    let consecutiveIdleChecks = 0;

    async function poll() {
      await checkForNewPhoto();
      const photoImg = document.querySelector('img.photo');
      if (photoImg) {
        // If a photo is present, we only need moderate refresh for new captures.
        // If a NEW photo appeared (requestId changed) photoInfo timestamp logic handles content swap.
        if (lastPhotoTs !== currentRequestId) {
          // Burst faster for a short window to catch rapid successive captures.
          pollIntervalMs = 1200;
          consecutiveIdleChecks = 0;
          lastPhotoTs = currentRequestId || 0;
        } else {
          consecutiveIdleChecks += 1;
          // Gradually back off when idle (no new photos)
          if (consecutiveIdleChecks > 5 && pollIntervalMs < 5000) pollIntervalMs += 500; // cap at 5s
        }
      } else {
        // No photo yet: back off more aggressively after some time
        consecutiveIdleChecks += 1;
        if (consecutiveIdleChecks > 4 && pollIntervalMs < 8000) pollIntervalMs += 1000; // up to 8s
      }
      setTimeout(poll, pollIntervalMs);
    }

    // Kick off adaptive polling
    poll();
  </script>
</body>
</html>