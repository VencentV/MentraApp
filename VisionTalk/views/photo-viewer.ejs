<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VisionTalk - Photo Viewer</title>
  <style>
    body {
      margin: 0;
      padding: 20px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      justify-content: center;
      align-items: flex-start; /* allow vertical growth with page scroll */
      min-height: 100vh;
      font-family: 'Arial', sans-serif;
      color: white;
    }

    .container {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 30px;
      max-width: 90vw;
      display: flex;
      flex-direction: column;
      align-items: stretch; /* let inner panels take full width */
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
      border: 1px solid rgba(255, 255, 255, 0.18);
      margin: 40px auto 60px; /* add top spacing when not vertically centered */
    }

    .header {
      text-align: center;
      margin-bottom: 20px;
    }

    .header h1 {
      margin: 0;
      font-size: 2.5em;
      font-weight: 300;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .header p {
      margin: 10px 0 0 0;
      opacity: 0.8;
      font-size: 1.1em;
    }

    .photo-card {
      width: 420px;
      min-height: 320px;
      background: rgba(0,0,0,0.18);
      border-radius: 18px;
      box-shadow: 0 2px 16px rgba(0,0,0,0.18);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      margin-bottom: 18px;
      border: 1.5px solid rgba(255,255,255,0.13);
      position: relative;
      overflow: hidden;
    }
    .photo {
      max-width: 95%;
      max-height: 280px;
      object-fit: contain;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.3);
      transition: transform 0.3s ease;
      background: #222;
      margin: 0 auto;
      display: block;
    }
    .photo:hover {
      transform: scale(1.02);
    }

    .no-photo, .loading {
      text-align: center;
      font-size: 1.2em;
      opacity: 0.8;
      padding: 40px;
    }

    .loading {
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0% { opacity: 0.8; }
      50% { opacity: 0.4; }
      100% { opacity: 0.8; }
    }

    .instructions {
      margin-top: 20px;
      text-align: center;
      opacity: 0.7;
      font-size: 0.9em;
      line-height: 1.4;
    }

    .status {
      position: absolute;
      top: 20px;
      right: 20px;
      background: rgba(255, 255, 255, 0.2);
      padding: 10px 15px;
      border-radius: 20px;
      font-size: 0.8em;
    }

    .panel {
  margin-top: 20px;
  width: 100%;
  max-width: 600px;
  background: rgba(255, 255, 255, 0.08);
  border: 1px solid rgba(255, 255, 255, 0.15);
  border-radius: 12px;
  padding: 12px;
  box-sizing: border-box;
    }
    #fullAnalysis {
      /* allow dynamic growth with content */
      white-space: pre-wrap;
      font-size: 13px;
      line-height: 1.4;
      opacity: 0.9;
      overflow: visible;
      max-height: none;
    }
    #chatlog {
      max-height: 180px;
      overflow-y: auto;
      word-break: break-word;
      white-space: pre-line;
    }
    .panel h3 {
      margin: 0 0 8px 0;
      font-weight: 500;
    }
    .timeline {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 6px 12px;
      font-size: 12px;
      max-height: 180px;
      overflow: auto;
    }
    .badge {
      display: inline-block;
      padding: 2px 8px;
      border-radius: 999px;
      background: rgba(255,255,255,0.15);
      font-size: 11px;
    }
  </style>
</head>
<body>
  <div class="status" id="status">Checking connection...</div>
  
  <div class="container">
    <div class="header">
      <h1>üîç VisionTalk</h1>
      <p>AI-powered visual reasoning assistant</p>
    </div>

    <div class="photo-card">
      <div id="content" class="loading">Waiting for photos from your Mentra glasses...</div>
    </div>

    <div class="instructions">
      <strong>How to use:</strong><br>
      Put on your Mentra glasses, look at anything interesting,<br>
      and press the button to capture and analyze what you see.
    </div>

    <div class="panel">
      <h3>Event timeline</h3>
      <div id="timeline" class="timeline">
        <div>‚Äî</div><div>Waiting for events‚Ä¶</div>
      </div>
    </div>

    <div class="panel">
      <h3>Latest photo metadata</h3>
      <div id="meta" style="font-size:12px;opacity:0.9">No photo yet</div>
    </div>

    <div class="panel" style="margin-top:18px;">
      <h3>Chat/Analysis Log</h3>
      <div id="chatlog" style="min-height:32px;opacity:0.85;font-size:13px;"></div>
    </div>
    <div class="panel" style="margin-top:18px;">
      <h3>Full Analysis</h3>
      <div id="fullAnalysis" style="min-height:60px;"></div>
      <div id="analysisMeta" style="margin-top:6px;font-size:11px;opacity:0.65"></div>
    </div>
  </div>

  <script>
    // Utility: Format event for chat/analysis log
    function formatChatEvent(ev) {
      const time = new Date(ev.ts).toLocaleTimeString();
      let msg = '';
      switch (ev.stage) {
        case 'photo_sent_to_openai':
          msg = `<b>Image sent to OpenAI</b> <span style='opacity:0.6'>[${time}]</span>`;
          break;
        case 'openai_response_received':
          msg = `<b>OpenAI response</b> <span style='opacity:0.6'>[${time}]</span><br><span style='opacity:0.8'>${ev.detail?.excerpt || ''}</span>`;
          break;
        case 'tts_sent_to_elevenlabs': {
          const req = ev.detail?.requestId || (window.currentRequestId || 'latest');
          const len = ev.detail?.length;
          msg = `<b>Sent to ElevenLabs TTS</b> <span style='opacity:0.6'>[${time}]</span>` +
                (len ? ` <span style='opacity:0.6'>(length: ${len})</span>` : '') +
                `<div id="tts-text-${req}" style="margin-top:6px;padding:8px;background:rgba(255,255,255,0.06);border-radius:8px;white-space:pre-wrap;display:none"></div>` +
                `<button data-req="${req}" class="show-tts-btn" style="margin-top:6px;font-size:11px;padding:4px 8px;border-radius:6px;border:1px solid rgba(255,255,255,0.2);background:transparent;color:#fff;cursor:pointer">Show full text</button>`;
          break;
        }
        case 'tts_chunk_play_start':
          msg = `<b>Playing analysis chunk...</b> <span style='opacity:0.6'>[${time}]</span>`;
          break;
        case 'tts_analysis_error':
          msg = `<b style='color:#ff9999'>TTS Error</b> <span style='opacity:0.6'>[${time}]</span><br><span style='opacity:0.8'>${ev.detail?.message || 'An unknown audio error occurred.'}</span>`;
          break;
        case 'tts_played':
          msg = `<b>Finished playing analysis</b> <span style='opacity:0.6'>[${time}]</span>`;
          break;
        case 'pipeline_complete':
          msg = `<b>Pipeline complete</b> <span style='opacity:0.6'>[${time}]</span>`;
          break;
        default:
          // Hide some of the more verbose events from the chat view
          const hidden = ['tts_chunking', 'tts_chunk_done', 'tts_chunk_play_done', 'tts_generate_all_start', 'tts_generate_all_done', 'tts_playback_all_start', 'tts_playback_all_done'];
          if (hidden.includes(ev.stage)) return '';
          msg = `<span style='opacity:0.7'>${ev.stage}</span> <span style='opacity:0.5'>[${time}]</span>`;
      }
      return `<div style='margin-bottom:8px;'>${msg}</div>`;
    }
    let currentRequestId = null;
    let connectionStatus = 'checking';
  let carouselLoaded = false;

    /**
     * Update connection status indicator
     */
    function updateStatus(status, message) {
      const statusEl = document.getElementById('status');
      connectionStatus = status;
      
      switch(status) {
        case 'connected':
          statusEl.textContent = 'üü¢ Connected';
          statusEl.style.background = 'rgba(34, 197, 94, 0.3)';
          break;
        case 'disconnected':
          statusEl.textContent = 'üî¥ Disconnected';
          statusEl.style.background = 'rgba(239, 68, 68, 0.3)';
          break;
        case 'checking':
        default:
          statusEl.textContent = 'üü° Checking...';
          statusEl.style.background = 'rgba(255, 255, 255, 0.2)';
      }
    }

    /**
     * Check for new photos and update display
     */
    async function checkForNewPhoto() {
      try {
        const response = await fetch('/api/latest-photo');

        if (response.status === 404) {
          // No photo available yet
          updateStatus('connected');
          if (document.getElementById('content').classList.contains('loading')) {
            document.getElementById('content').innerHTML =
              '<div class="no-photo">No photos captured yet.<br><br>Use your Mentra glasses to take a photo of anything you want to understand!</div>';
          }
          return;
        }

        if (!response.ok) {
          throw new Error(`HTTP ${response.status}: ${response.statusText}`);
        }

        updateStatus('connected');
        const photoInfo = await response.json();

        // Check if this is a new photo
        if (photoInfo.requestId !== currentRequestId) {
          currentRequestId = photoInfo.requestId;
          // Only update the image src, not the whole element, to prevent flicker/layout shift
          let img = document.querySelector('#content img.photo');
          if (!img) {
            document.getElementById('content').innerHTML = '<img class="photo" src="" alt="Latest captured image" />';
            img = document.querySelector('#content img.photo');
          }
          img.src = '/api/photo/' + photoInfo.requestId;
          // Refresh carousel when new photo arrives
          loadCarousel();
          loadPhotoMeta(photoInfo.requestId);
          // Load full analysis specifically for this photo
          loadFullAnalysisFor(photoInfo.requestId);
        }
      } catch (error) {
        console.error('Error checking for new photo:', error);
        updateStatus('disconnected');
        document.getElementById('content').innerHTML =
          '<div class="no-photo">Connection error: ' + error.message + '<br><br>Please check that the VisionTalk server is running.</div>';
      }
    }

    async function loadCarousel() {
      try {
        const resp = await fetch('/api/photos');
        if (!resp.ok) return;
        const photos = await resp.json();
        const existing = document.getElementById('carousel');
        if (!existing) {
          const c = document.createElement('div');
          c.id = 'carousel';
          c.style.marginTop = '20px';
          c.style.display = 'flex';
          c.style.gap = '8px';
          c.style.flexWrap = 'wrap';
          document.querySelector('.container').appendChild(c);
        }
        const el = document.getElementById('carousel');
        el.innerHTML = photos.map(p => `<div style="flex:0 0 90px;display:flex;flex-direction:column;align-items:center;font-size:10px;">` +
          `<img style=\"width:90px;height:60px;object-fit:cover;border-radius:6px;box-shadow:0 0 4px rgba(0,0,0,0.4);\" src='/api/photo/${p.requestId}' alt='${p.requestId}' />` +
          `<span style='margin-top:4px;opacity:0.7;'>${new Date(p.timestamp).toLocaleTimeString()}</span>` +
        `</div>`).join('');
        carouselLoaded = true;
      } catch {}
    }

    // Initial carousel load (after slight delay to avoid race on first boot)
    setTimeout(() => loadCarousel(), 1200);

    async function loadPhotoMeta(id) {
      try {
        const resp = await fetch('/api/photo-info/' + id);
        if (!resp.ok) return;
        const p = await resp.json();
        const meta = document.getElementById('meta');
        meta.innerHTML = `
          <div><strong>requestId:</strong> ${p.requestId}</div>
          <div><strong>timestamp:</strong> ${new Date(p.timestamp).toLocaleString()}</div>
          <div><strong>size:</strong> ${p.size.toLocaleString()} bytes</div>
          <div><strong>mime:</strong> ${p.mimeType}</div>
          <div><strong>sha256:</strong> <code style="word-break:break-all">${p.sha256}</code></div>
        `;
      } catch {}
    }

    async function loadEvents() {
      try {
        const resp = await fetch('/api/events');
        if (!resp.ok) return;
        const data = await resp.json();
        const events = (data.events || []).slice(-40).reverse(); // newest first
        // Timeline panel (all events)
        const t = document.getElementById('timeline');
        if (!events.length) {
          t.innerHTML = '<div>‚Äî</div><div>No events yet</div>';
        } else {
          t.innerHTML = events.map(ev => {
            const time = new Date(ev.ts).toLocaleTimeString();
            const excerpt = ev.detail && ev.detail.excerpt ? ' ‚Äî ' + ev.detail.excerpt : '';
            return `<div>${time}</div><div><span class="badge">${ev.stage}</span>${excerpt}</div>`;
          }).join('');
        }
        // Chat/analysis log (pipeline events only)
        const chatlog = document.getElementById('chatlog');
        const pipelineStages = [
          'photo_sent_to_openai',
          'openai_response_received',
          'openai_response_ok',
          'tts_sent_to_elevenlabs',
          'tts_chunking',
          'tts_chunk_start',
          'tts_chunk_done',
          'tts_analysis_error',
          'tts_played',
          'pipeline_complete'
        ];
        const chatEvents = events.filter(ev => pipelineStages.includes(ev.stage));
        if (!chatEvents.length) {
          chatlog.innerHTML = '<span style="opacity:0.7">No analysis yet.</span>';
        } else {
          chatlog.innerHTML = chatEvents.map(formatChatEvent).join('');
          // Wire up "Show full text" buttons for tts_sent_to_elevenlabs entries
          const buttons = chatlog.querySelectorAll('.show-tts-btn');
          buttons.forEach(btn => {
            btn.addEventListener('click', async (e) => {
              const req = e.currentTarget.getAttribute('data-req');
              const box = document.getElementById('tts-text-' + req);
              if (!box) return;
              if (box.style.display === 'block') {
                box.style.display = 'none';
                e.currentTarget.textContent = 'Show full text';
                return;
              }
              try {
                const r = await fetch('/api/analysis/by-request/' + encodeURIComponent(req));
                if (r.ok) {
                  const data = await r.json();
                  box.textContent = data.analysis;
                  box.style.display = 'block';
                  e.currentTarget.textContent = 'Hide full text';
                } else {
                  // Fallback to latest
                  const rl = await fetch('/api/analysis/latest');
                  if (rl.ok) {
                    const dl = await rl.json();
                    box.textContent = dl.analysis;
                    box.style.display = 'block';
                    e.currentTarget.textContent = 'Hide full text';
                  }
                }
              } catch {}
            });
          });
        }
        // Auto refresh full analysis when new analysis-related events appear
        const hasAnalysisEvent = chatEvents.some(ev => ['openai_response_ok','tts_sent_to_elevenlabs','tts_chunk_start'].includes(ev.stage));
        if (hasAnalysisEvent && currentRequestId) {
          loadFullAnalysisFor(currentRequestId);
        }
      } catch {}
    }

    async function loadFullAnalysis() {
      try {
        const resp = await fetch('/api/analysis/latest');
        if (!resp.ok) {
          if (resp.status === 404) {
            document.getElementById('fullAnalysis').textContent = 'No analysis yet.';
            document.getElementById('analysisMeta').textContent = '';
          }
          return;
        }
        const data = await resp.json();
        const full = document.getElementById('fullAnalysis');
        full.textContent = data.analysis;
        const meta = document.getElementById('analysisMeta');
        const timeStr = new Date(data.timestamp).toLocaleTimeString();
        meta.textContent = `User: ${data.userId} | Length: ${data.length} chars | ${timeStr}`;
      } catch (err) {
        // Silent fail
      }
    }
    async function loadFullAnalysisFor(requestId) {
      try {
        const resp = await fetch('/api/analysis/by-request/' + encodeURIComponent(requestId));
        if (resp.ok) {
          const data = await resp.json();
          const full = document.getElementById('fullAnalysis');
          full.textContent = data.analysis;
          const meta = document.getElementById('analysisMeta');
          const timeStr = new Date(data.timestamp).toLocaleTimeString();
          meta.textContent = `User: ${data.userId} | Length: ${data.length} chars | ${timeStr} | Photo: ${data.requestId}`;
          return;
        }
        // Fallback to latest if not found
        loadFullAnalysis();
      } catch {
        // Fallback silently
      }
    }
    // Initial attempt to load any existing analysis
    loadFullAnalysis();

    // Poll events at a relaxed cadence
    loadEvents();
    setInterval(loadEvents, 3000);

    // Adaptive polling: fast for first 10s after load, slower when idle, faster briefly after a new photo
    let pollIntervalMs = 1500; // start a bit slower than 1s to reduce server spam
    let lastPhotoTs = 0;
    let consecutiveIdleChecks = 0;

    async function poll() {
      await checkForNewPhoto();
      const photoImg = document.querySelector('img.photo');
      if (photoImg) {
        // If a photo is present, we only need moderate refresh for new captures.
        // If a NEW photo appeared (requestId changed) photoInfo timestamp logic handles content swap.
        if (lastPhotoTs !== currentRequestId) {
          // Burst faster for a short window to catch rapid successive captures.
          pollIntervalMs = 1200;
          consecutiveIdleChecks = 0;
          lastPhotoTs = currentRequestId || 0;
        } else {
          consecutiveIdleChecks += 1;
          // Gradually back off when idle (no new photos)
          if (consecutiveIdleChecks > 5 && pollIntervalMs < 5000) pollIntervalMs += 500; // cap at 5s
        }
      } else {
        // No photo yet: back off more aggressively after some time
        consecutiveIdleChecks += 1;
        if (consecutiveIdleChecks > 4 && pollIntervalMs < 8000) pollIntervalMs += 1000; // up to 8s
      }
      setTimeout(poll, pollIntervalMs);
    }

    // Kick off adaptive polling
    poll();
  </script>
</body>
</html>